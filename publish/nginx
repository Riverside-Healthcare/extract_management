server {
    listen 80;
    server_name server-name;
    return 301 https://server-name$request_uri;   
}

server {
    listen 443 ssl http2;
    ssl_certificate /home/websites/site-name/publish/cert.crt;
    ssl_certificate_key /home/websites/site-name/publish/cert.key;
    server_name server-name;

    location /static {
        access_log   off;
        alias /home/websites/site-name/app-name/static/;
    }

    location / {
        access_log   off;
        include proxy_params;
        proxy_pass http://unix:/home/websites/site-name/site-name.sock;
    }

    # to use nginx analitics site /nginx_status
    location /nginx_status {
        stub_status on;
        access_log   off;
        # for specific IP
        # allow 1.1.1.1;
        # deny all;
        # or allow all
        allow all;
    }
}