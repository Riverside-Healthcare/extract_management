{% extends "layout.html.j2" %}
{% block css %}
    {% assets "css_login" %}
    <link type="text/css" rel="stylesheet" href="{{ ASSET_URL }}" />
    {% endassets %}
{% endblock css %}

{% block body_auth %}
    <div class="login">
        <div class="login-cntr">
            <form action="" method="post" autocomplete="off">
                <h2 class="login-ttl">Extract Management 2.0</h2>

                {% if message|length %}
                    <div class="login-error">
                        <svg class="login-errorIcn" viewbox="0 0 576 512" xmlns="http://www.w3.org/2000/svg">
                            <path d="M569.517 440.013C587.975 472.007 564.806 512 527.94 512H48.054c-36.937 0-59.999-40.055-41.577-71.987L246.423 23.985c18.467-32.009 64.72-31.951 83.154 0l239.94 416.028zM288 354c-25.405 0-46 20.595-46 46s20.595 46 46 46 46-20.595 46-46-20.595-46-46-46zm-43.673-165.346l7.418 136c.347 6.364 5.609 11.346 11.982 11.346h48.546c6.373 0 11.635-4.982 11.982-11.346l7.418-136c.375-6.874-5.098-12.654-11.982-12.654h-63.383c-6.884 0-12.356 5.78-11.981 12.654z"/>
                        </svg>
                        {{ message }}
                    </div>
                {% endif %}

                <div class="login-inputGrp">
                    <div class="login-inputTtl" >Username (<em>ex</em>: joe-cool)</div>
                    <input class="login-input" name="user" autocomplete="off" />
                </div>
                <div class="login-inputGrp">
                    <div class="login-inputTtl">Password (<em>ex</em>: d0n't4g@!)</div>
                    <input class="login-input"  type="password" name="password" />
                </div>
                <button class="login-btn" type="submit" value="Submit">Log In</button>
                <div class="login-subTtl">
                    <em>Note: you must be part of the analytics team to access this website.</em>
                </div>
            </form>
            <div class="login-copy">&#169; <script>document.write(new Date().getFullYear())</script> Riverside Healthcare</div>
        </div>
    </div>
{% endblock body_auth %}
